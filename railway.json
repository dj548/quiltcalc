{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd QuiltCalc && npm install"
  },
  "deploy": {
    "startCommand": "cd QuiltCalc && npx expo start --web --port $PORT",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
